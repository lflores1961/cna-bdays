<% provide(:title, "Inicio") %>
<%# logged_in is hard wired in ApplicationHelper %>
<% if logged_in? %>
<div class="container-fluid">
  <div class="row">
    <% @options.each do |opcion| %>
      <div class="col-md-12">
        <%= link_to opcion[:letrero], eval(opcion[:ruta]), class: "btn btn-default cust-button" %>
      </div>
    <% end %>
  </div>
</div>

<% else %>
  <div class="center jumbotron">
        <h1>Correo automatizado de felicitaciones</h1>
        <div class="container">
          <%=  form_tag '#', method: :get do %>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= label_tag :search, "Usuario:   ", class: "form-control-label" %>
            </div>
            <div class="col-sm-10">
              <%= text_field_tag(
                  :search,
                  params[:search],
                  placeholder: "Usuario",
                  class: "form-control"
                    ) %>
            </div>

          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= label_tag :password, "Password:   ", class: "form-control-label" %>
            </div>
            <div class="col-sm-10">
              <%= password_field_tag(
                  :search,
                  params[:password],
                    placeholder: "Password",
                  class: " form-control"
                    ) %>
            </div>
          </div>
            <% end %>
        </div>

</div>
<% end %>
