<% provide(:title, "Notarios") %>
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <h2>Notarios</h2>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>Listado de miembros del Colegio de Notarios de Aguascalientes.</p>
    </div>
    <div class="col-md-6">
      <table>
        <thead>
          <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fecha de nacimiento</th>
            <th>Presidente?</th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.numero %></td>
              <td><%= member.nombre %></td>
              <td><%= member.email %></td>
              <td><%= member.fechaNacimiento %></td>
              <% presi = member.presidente ? "Si" : "No" %>
              <td><%= presi %></td>
              <td><%= link_to '', member, class: "glyphicon glyphicon-eye-open" %></td>
              <td><%= link_to '', edit_member_path(member), class: "glyphicon glyphicon-edit" %></td>
              <td><%= link_to '', member, class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: '¿Está seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
      <p>Navegación</p>
      <nav class="nav flex-column">
        <%= link_to 'Inicio', root_path, class: "nav-link" %>
      </nav>
    </div>
  </div>
</div>




<br>

<%= link_to 'Agregar Notario', new_member_path, class: "btn btn-default" %>
