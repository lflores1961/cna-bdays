<%= form_for @mensaje, url: {action: 'update'} do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <div class="form-group row">
    <%= f.label :tipo, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :tipo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :texto, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :texto, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-default" %>
  </div>
<% end %>
