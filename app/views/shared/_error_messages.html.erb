<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2>La forma contiene <%= pluralize(object.errors.count, "error") %></h2>
    </div>

    <ul>
      <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
