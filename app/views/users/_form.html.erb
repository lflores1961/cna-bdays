<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "8 caracteres mÃ­nimo" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-default" %>
  </div>
<% end %>
